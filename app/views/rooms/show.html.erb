<div class="container">
  <div class="row">
    <h1 class="text-center">Mate</h1>
    <div class="header clearfix">
      <p><%= link_to "戻る", chat_messages_path ,:style=>"text-decoration:none; font-size: 20px;"%></p>
    </div>

    <h1>DM</h1>

    <h4>参加者</h4>
    <% @entries.each do |e| %>
      <span><strong><a href="/users/<%= e.user.id %>"><%= attachment_image_tag e.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><%= e.user.user_name %>さん </a></strong></span>
    <% end %>

    <hr>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <strong><%= m.body %></strong>
        <small>by <strong><a href="/users/<%= m.user_id %>"><%= attachment_image_tag m.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><%= m.user.user_name %>さん</a></strong></small>
        <hr>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>

    <%= form_for @message do |f| %>
      <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <%= f.submit "投稿する" %>
    <% end %>
  </div>
</div>



<style>
  .header {
    border-bottom: 0.5px solid #EEEEEE;
  }

  .header p {
    float: right;
  }
</style>