<div class="container">
	<div class="row">
		<h1 class="text-center">Mate</h1>
		<div class="header clearfix">
			<%= form_tag hashtag_search_posts_path, :method => 'get' do %>
			  <%= text_field_tag :search ,params[:search]%>
			  <%= submit_tag 'Search', :hashtag_name => nil %>
			<% end %>
		</div>
		<div class="navbar-header clearfix">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
			</div>

				<div>
				<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
				</div>

				<div>
					<%= link_to '投稿一覧',posts_path %>
				</div>

				<div>
					<%= link_to "新規投稿",new_post_path %>
				</div>

				<div>
					<%= link_to "マイページ", user_path(current_user.id) %>
				</div>
				<div>
					<%= link_to '会員登録情報編集', edit_profile_path(current_user.id) %>
				</div>

				<div>
					<%= link_to '通知一覧', notifications_path %>
				</div>

				<div>
					<%= link_to 'お問い合わせ', new_contact_path %>
				</div>
				<hr>
			</div>

				<div class="clearfix">
						<div>
							<% @categories.each do |category| %>
								<%= link_to category_path(category.id) do %>
								<div>
									<p><%= category.category_name %></p>
									<%= image_tag category.category_image.to_s,size: '500x400' %>
								<% end %>
							<% end %>
						</div>
				</div>
			
	</div>
</div>

