<div class="container">
	<div class="row">
		<h1 class="text-center">Mate</h1>
		<div class="header clearfix">
			<p><%= link_to "戻る", tops_path ,:style=>"text-decoration:none; font-size: 20px;"%></p>
		</div>
		<h2 class="text-center">お問い合わせ</h2>
			<% if @contact.errors.any? %>
		    <div id="error_explanation"  class="alert alert-danger">
		      <ul>
		        <h2><%= @contact.errors.count %> 件のエラーがあります。</h2>
		        <% @contact.errors.full_messages.each do |msg| %>
		        <li> <%= msg %> </li>
		        <% end %>
		      </ul>
		    </div>
		  <% end %>
		</div>
		<%= form_for @contact , url: contacts_new_path do |f| %>
		  <div class="form-group">
		    <%= f.label :email, '返信先メールアドレス' %>
		    <%= f.text_field :email, class: 'form-control' ,:style=>"font-size: 20px;"%>
		  </div>
		 <div class="form-group">
		   <%= f.label :message, 'お問い合わせ内容' %>
		   <%= f.text_area :message, size: '5x5', class: 'form-control',:style=>"font-size: 30px;"%>
		 </div>
		 <h2 class="text-center"><%= f.submit '送信',:style=>"font-size: 30px;"%></h2>
		<% end %>
	</div>
</div>

<style>
  .header {
    border-bottom: 0.5px solid #EEEEEE;
  }

  .header p {
    float: right;
    margin-right: 200px;
  }

  h2 {
    font-size: 30px;
    letter-spacing: 5px;
    font-family: 'Osaka';
  	padding-bottom: 30px;
  }
</style>
