<% if user_signed_in? %>
	<% if post.liked_by?(current_user) %>
		<p><span>いいね済み </span><%=link_to post.likes.count, post_likes_path(post.id), method: :delete, remote: true %></p>
  <% else %>
		<p><span>いいね！ </span><%=link_to post.likes.count, post_likes_path(post.id), method: :post, remote: true %></p>
	<% end %>
<% else %>
	<p><span>いいね数: </span><%= post.likes.count %></p>
<% end %>