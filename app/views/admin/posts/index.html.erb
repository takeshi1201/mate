<h1>Admin::Posts#index</h1>
<p>Find me in app/views/admin/posts/index.html.erb</p>
<div class="container">
	<div class="row">
		<h1 class="text-center">Mate(管理者)</h1>
		<div class="header clearfix">
			<%= link_to "ユーザ一覧", admin_users_path %>
			<%= link_to "ログアウト", destroy_admin_user_session_path %>
		</div>
		<div>
				<% @posts.each do |post| %>
					<div class="content clearfix">
						<div class="post-profile">
							<%= link_to admin_user_path(post.user.id) do %>
								<%= attachment_image_tag post.user, :profile_image , :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg"%>
							<% end %>
						</div>
						<div class="post-name">
							<%= post.user.user_name %>
						</div>
						<div>
							<%= post.hashtag_name %>
						</div>
						<div>
							<%= post.comment %>
						</div>

						<div class="post-image">
						   <p><%= attachment_image_tag post, :post_image ,:fill, 1150, 450, format: 'jpeg', fallback: "no_image.jpg"%></p>
						</div>
				  </div>
				<% end %>
			</div>
	</div>
</div>

<style>
 	.post-image {
 		width: 100%;
 		margin:0 auto;
 	}
 	.post-profile {
 		position: relative;
 	}

 	.post-name {
 		display: inline;
 		font-size: 30px;
 		float: right;
 	}
</style>
