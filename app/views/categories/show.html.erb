<div class="container">
	<div class="row">
		<h1 class="text-center">Mate</h1>
		<div class="header clearfix">
      <p><%= link_to "戻る", tops_path ,:style=>"text-decoration:none; font-size: 20px;"%></p>
    </div>
    <div class="category-name">
			<%= @category.category_name %>
		</div>
		<% @category_users.each do |category_user| %>
				<div class="category clearfix">
					<%= link_to user_path(category_user.user.id) do %>
						<%= attachment_image_tag category_user.user, :profile_image, :fill, 700, 300, format: 'jpeg', class: "profile-img ", fallback: "no_image.jpg" %>
						<span><%= category_user.user.user_name %></span>
					<% end %>
				</div>
		<% end %>
	</div>
</div>

<style>
	.header {
    border-bottom: 0.5px solid #EEEEEE;
  }

  .header p {
    float: right;
    margin-right: 200px;
  }
  .category-name {
  	font-size: 80px;
  	letter-spacing: 5px;
  	text-align: center;
  }

  .category {
  	margin: 50px 0;
  }

  .category span {
  	float: right;
  	font-size: 30px;
  }

  .profile-img {
  	border-radius: 10%;
  	width: 100%;
  	margin: 0 auto;
  }
</style>